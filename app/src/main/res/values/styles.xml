<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDayPrimary</item>
        <item name="colorPrimaryDark">@color/colorDayPrimaryDark</item>
        <item name="colorAccent">@color/colorDayAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <!--引导页面-->
    <style name="WelcomeHeadingAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WelcomeContentAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActivityTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDayPrimary</item>
        <item name="colorPrimaryDark">@color/colorDayPrimaryDark</item>
        <item name="colorAccent">@color/colorDayAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppSettingTheme" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowBackground">@color/colorDayWhite</item>
    </style>

    <!-- 水平线条 -->
    <style name="Line_Horizontal_Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/length_size_1</item>
        <item name="android:background">@color/list_divide_line</item>
    </style>

    <!-- 垂直线条 -->
    <style name="Line_Vertical_Base">
        <item name="android:layout_width">@dimen/length_size_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/list_divide_line</item>
    </style>

</resources>
