<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/colorDayPrimaryDark"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_account"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="60dp"
                android:gravity="bottom"
                android:hint="@string/hint_fragment_login_user_account"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <EditText
                    android:id="@+id/et_account"
                    android:background="#ffffff"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_pwd"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="60dp"
                android:gravity="bottom"
                android:layout_marginLeft="30dp"
                android:hint="@string/hint_fragment_login_user_pwd"
                android:layout_marginRight="30dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/et_pwd"
                    android:paddingLeft="10dp"
                    android:background="#ffffff"
                    android:inputType="textPassword"/>


            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/btn_login"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/text_fragment_login"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/tv_to_register"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:text="@string/text_fragment_register_unregistered_user"
                android:textColor="#ffffff"
                android:layout_marginTop="25dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>